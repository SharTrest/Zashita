<Window x:Class="Diplom.Client.View.Windows.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Client.View.Windows"
        mc:Ignorable="d"
        Title="Окно пользователя"
        Background="White"
        Height="600" 
        Width="940"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Справка"
                            Command="{Binding ShowCreaterCommand}"
                            Foreground="Black"
                            Background="Transparent"
                            Width="100"
                            HorizontalAlignment="Left"
                            />
        
        <StackPanel Grid.Row="1">
        <Border Grid.Column="0"
                Grid.Row="1"
                Margin="10"
                Height="150"
                Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
            
            <!--<Border.Background>
                <ImageBrush ImageSource="../../Resources/Images/user.jpg"/>
            </Border.Background> Фото юзера-->
            
        </Border>
        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Margin="10"
                   Height="20"
                   Width="150"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   FontSize="14"
                   TextAlignment="Center"
                   Text="{Binding UserName}"/>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    Width="260"
                    Margin="0,150"
                    HorizontalAlignment="Left">
            <Button 
                Height="30"
                Width="200"
                Background="Transparent"
                Content="Изменение пароля"
                Foreground="Black"
                FontSize="16"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="25,50"
                Command="{Binding RemakePassCommand}"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    >
            <ContentControl x:Name="ChangePass"
                            Content="{Binding CurrentView}"/>
            </StackPanel>

    </Grid>
</Window>
